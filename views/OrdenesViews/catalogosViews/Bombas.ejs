<!DOCTYPE html>
<html lang="en">
<%include ../../Layouts/Ordenes/Header.ejs %>
<%include ../../Layouts/Ordenes/tabs.ejs %>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="tab-content" id="ex2-content">
                <!--TAB PARA TABLA DE LISTADO-->
                <div
                class="tab-pane fade show active"
                id="ex3-tabs-1"
                role="tabpanel"
                aria-labelledby="listado"
                >
                    <!--ZAMPAR AQUI TODO EL MIERDERO DE LA TABLA DE las bombas-->
                    <div class="row border border-light">
                        <div class="col-lg-12">
                            <table class="hover listado" >
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Bomba</th>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>  
                        </div>
                    </div>                                     
                </div>
                <!--TAB PARA FORM DE REGISTRO-->
                <div
                class="tab-pane fade"
                id="ex3-tabs-2"
                role="tabpanel"
                aria-labelledby="regform"
                >
                    <!--ZAMPAR AQUI EL FORM DE REGISTRO-->
                    <div class="row d-flex justify-content-center">
                        <form class="text-center border border-light p-5 col-md-4" action="#" >
                            <!-- Grid row -->
                            <div class="form-row">
                            <!-- Grid column -->
                            <div class="col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="bomba" type="text" class="form-control" required>  
                                    <label for="bomba">Nombre de la Bomba</label>                                  
                                </div>
                                <div class="md-form col-lg-12">
                                    <select required="required" class="browser-default custom-select">
                                        <option disabled selected value="">Elija la ubicacion</option>
                                        <option value="1">Cuarto Frio</option>
                                        <option value="2">San Lorenzo</option>
                                        <option value="3">Suragroh</option>
                                        <option value="4">Santa Rosa</option>
                                        <option value="5">Ojo de Agua</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <!-- Grid row -->
                        </form> 
                    </div>                        
                </div>
            </div>
        </div>
    </div>
<%include ../../Layouts/Ordenes/Footer.ejs %>
</html>