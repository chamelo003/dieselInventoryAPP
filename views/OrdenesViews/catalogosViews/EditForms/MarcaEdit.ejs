<!DOCTYPE html>
<html lang="en">
    <% include ../../../Layouts/Ordenes/Header.ejs %>
    <h3>Editar la marca</h3>
    <div class="row d-flex justify-content-center">
        <form class="text-center border border-light p-5 col-md-4" action="/catalogos/marcas/edit/<%= results[0].IdMarca %>" method="POST">
            <!-- Grid row -->
            <div class="form-row">
            <!-- Grid column -->
            <div class="col-lg-12">
                <!-- Material input -->
                <div class="md-form mt-0">
                    <input id="marca" name="marca" type="text" class="form-control" autocomplete="off" required value="<%= results[0].Marca %>">  
                    <label for="marca">Marca del vehiculo</label>                                  
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Actualizar datos</button>
            </div>
            <!-- Grid row -->
        </form> 
    </div> 
    <% include ../../../Layouts/Ordenes/Footer.ejs %>

</html>