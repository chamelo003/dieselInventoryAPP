<!DOCTYPE html>
<html lang="es-ES">
<% include ../../../Layouts/Ordenes/Header.ejs %>
    <h3>Editar Tipo de Vehiculo</h3>
    <div class="row d-flex justify-content-center">
        <form class="text-center border border-light p-5 col-md-4" action="/catalogos/tv/edit/<%= results[0].IdTipo %>" method="POST">
            <!-- Grid row -->
            <div class="form-row">
            <!-- Grid column -->
            <div class="col-lg-12">
                <!-- Material input -->
                <div class="md-form mt-0">
                    <input id="Tipo" name="tv" type="text" class="form-control" autocomplete="off" required value="<%= results[0].Tipo %>">  
                    <label for="Tipo">Tipo de vehiculo</label>                                  
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Actualizar datos</button>
            </div>
            <!-- Grid row -->
        </form> 
    </div>           
<% include ../../../Layouts/Ordenes/Footer.ejs %>
</html>



