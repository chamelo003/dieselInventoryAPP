<!DOCTYPE html>
<html lang="es-ES">
<% include ../../../Layouts/Ordenes/Header.ejs %>
<% include ../modal.ejs %>
<h3>Editar datos del Vehiculo</h3>
<div class="row d-flex justify-content-center">
    <div class="row d-flex justify-content-center">
        <form class="text-center border border-light p-5 col-md-4" action="/catalogos/veh/edit/<%= Vehiculos[0].Placa %>" method="POST" >
            <!-- Grid row -->
            <div class="form-row">
            <!-- Grid column -->
            <div class="col-lg-12">
                <!-- Material input -->
                <div class="md-form mt-0">
                    <input id="placa" type="text" name="placa" class="form-control" required maxlength="7" autocomplete="off" value="<%=Vehiculos[0].Placa %>">  
                    <label for="placa">Placa</label>                                  
                </div>
            </div>
            <!-- Grid column -->
            <div class="md-form col-lg-12">
                <!-- Material input -->
                <div class="md-form mt-0">
                    <input id="marca" type="text" class="form-control openModal4Id" autocomplete="off" data-toggle="modal" data-target="#modalExtData" required value="<%= Vehiculos[0].Marca %>"> 
                    <input type="text" id="idmarca" name="idmarca" hidden value="<%= Vehiculos[0].IdMarca %>">
                    <label for="marca">Marca</label>                                   
                </div>
            </div>
            <!-- Grid column -->
            <div class="md-form col-lg-12">
                <!-- Material input -->
                <div class="md-form mt-0">
                    <input id="tv" type="text" class="form-control openModal4Id" autocomplete="off" data-toggle="modal" data-target="#modalExtData" required value="<%= Vehiculos[0].Tipo %>">       
                    <input type="text" name="idtv" id="idtv" hidden value="<%= Vehiculos[0].IdTipo %>">
                    <label for="tv">Tipos de vehiculos</label>                             
                </div>
            </div>                          
            <!-- Grid column -->
            <div class="md-form col-lg-12">
                <textarea id="form7" name="obs" class="md-textarea form-control" rows="3" autocomplete="off"><%= Vehiculos[0].Observacion %></textarea>
                <label for="form7">Observacion</label>
            </div>
            <!-- Grid column -->
            <div class="md-form col-lg-12">
                <div class="md-form mt-0">
                    <!--el data-toggle="modal" es el que activa la modal. el data-target es el nombre de la modal que debe activar-->
                    <input required="required" class="form-control openModal4Id" type="text" id="idMot"
                     data-toggle="modal" data-target="#modalExtData" autocomplete="off" value="<%= Vehiculos[0].Motorista %>"
                    >
                    <input type="text" name="idmot" id="motid" hidden value="<%= Vehiculos[0].IdMotorista %>">
                    <label for="idMot">Motorista</label>
                </div>                                
            </div>
            </div>
            <div class="col-md-12">
                <button id="regMot" class="btn btn-primary" type="submit">Actualizar datos</button>
            </div>
            <!-- Grid row -->
        </form> 
    </div>     
</div>    
<% include ../../../Layouts/Ordenes/Footer.ejs %>
</html>