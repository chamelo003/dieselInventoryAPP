<!DOCTYPE html>
<html lang="es-ES">
<% include ../../../Layouts/Ordenes/Header.ejs %>
<% include ../modal.ejs %>
<h3>Editar datos del Motorista</h3>
<div class="row d-flex justify-content-center">
    <form class="text-center border border-light p-5 col-md-4" action="/catalogos/mot/edit/<%= motoristas[0].IdMotorista%>" method="POST" >
        <!-- Grid row -->
        <div class="form-row">
        <!-- Grid column -->
        <div class="col-lg-12">
            <!-- Material input -->
            <div class="md-form mt-0">
                <input id="Identidad" name="id" type="text" class="form-control" maxlength="13" autocomplete="off" required value="<%= motoristas[0].IdMotorista%>">
                <label for="Identidad">Identidad</label>                                    
            </div>
        </div>
        <!-- Grid column -->
        <div class="md-form col-lg-12">
            <!-- Material input -->
            <div class="md-form mt-0">
                <input id="nom" name="nombre" type="text" class="form-control" autocomplete="off" required value="<%= motoristas[0].Nombre %>">                                    
                <label for="nom">Nombre</label>
            </div>
        </div>
        <!-- Grid column -->
        <div class="md-form col-lg-12">
            <!-- Material input -->
            <div class="md-form mt-0">
                <input id="apellido" name="apellido" type="text" class="form-control" autocomplete="off" required value="<%= motoristas[0].Apellido %>">   
                <label for="apellido">Apellido</label>                                 
            </div>
        </div>                          
        <!-- Grid column -->
        <div class="md-form col-lg-12">
            <textarea id="form7" name="obs" class="md-textarea form-control" rows="3" autocomplete="off"><%= motoristas[0].Observacion %></textarea>
            <label for="form7">Observacion</label>
        </div>
        <!-- Grid column -->
        <div class="md-form col-lg-12">
            <div class="md-form mt-0">
                <!--el data-toggle="modal" es el que activa la modal. el data-target es el nombre de la modal que debe activar-->
                <input name="rtnTrans" required="required" class="form-control openModal4Id" placeholder="RTN Transporista" type="text" name="Transportistas"  value="<%= motoristas[0].RTN_TRANSPORTISTA %>"
                 id="rtnTrans" data-toggle="modal" data-target="#modalExtData" autocomplete="off"
                >
            </div>                                
        </div>
        </div>
        <div class="col-md-12">
            <button id="regMot" class="btn btn-primary" type="submit">Actualizar Datos</button>
        </div>
        <!-- Grid row -->
    </form>
</div>    
<% include ../../../Layouts/Ordenes/Footer.ejs %>
</html>