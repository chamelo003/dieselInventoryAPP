<!DOCTYPE html>
<html lang="en">
<%include ../../Layouts/Ordenes/Header.ejs %>
<%include ../../Layouts/Ordenes/tabs.ejs %>
<%include ./modal.ejs %>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="tab-content" id="ex2-content">
                <!--TAB PARA TABLA DE LISTADO-->
                <div
                class="tab-pane fade show active"
                id="ex3-tabs-1"
                role="tabpanel"
                aria-labelledby="listado"
                >
                    <!--ZAMPAR AQUI TODO EL MIERDERO DE LA TABLA DE MOTORISTAS-->
                    <div class="row border border-light">
                        <div class="col-lg-12">
                            <table class="hover listado" >
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Observacion</th>
                                        <th>Bomba asignada</th>
                                    </tr>
                                </thead>
                                <tbody>
        
                                </tbody>
                            </table>  
                        </div>
                    </div>                                     
                </div>
                <!--TAB PARA FORM DE REGISTRO-->
                <div
                class="tab-pane fade"
                id="ex3-tabs-2"
                role="tabpanel"
                aria-labelledby="regform"
                >
                    <!--ZAMPAR AQUI EL FORM DE REGISTRO-->
                    <div class="row d-flex justify-content-center">
                        <form class="text-center border border-light p-5 col-md-4" action="#" >
                            <!-- Grid row -->
                            <div class="form-row">
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="nombre" type="text" class="form-control" required>    
                                    <label for="nombre">Nombres</label>                                
                                </div>
                            </div>
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="apellido" type="text" class="form-control" required>       
                                    <label for="apellido">Apellidos</label>                             
                                </div>
                            </div>                          
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <textarea id="form7" class="md-textarea form-control" rows="3"></textarea>
                                <label for="form7">Observacion</label>
                            </div>
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <div class="md-form mt-0">
                                    <!--el data-toggle="modal" es el que activa la modal. el data-target es el nombre de la modal que debe activar-->
                                    <!--input required="required" class="form-control" placeholder="RTN Transporista" type="text" name="Transportistas" id="rtnTrans" data-toggle="modal" data-target="#modalExtData"-->
                                    <select required="required" class="browser-default custom-select">
                                        <option disabled selected value="">Elija la bomba asignada</option>
                                        <option value="1">Cuarto Frio</option>
                                        <option value="2">Suragroh</option>
                                        <option value="3">Santa Rosa</option>
                                        <option value="4">Ojo de Agua</option>
                                    </select>
                                </div>                                
                            </div>
                            </div>
                            <div class="col-md-12">
                                <button id="regMot" class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <!-- Grid row -->
                        </form> 
                    </div>                        
                </div>
            </div>
        </div>
    </div>
<%include ../../Layouts/Ordenes/Footer.ejs %>
</html>