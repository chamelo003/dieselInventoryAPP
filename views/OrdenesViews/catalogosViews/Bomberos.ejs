<!DOCTYPE html>
<html lang="en">
<%include ../../Layouts/Ordenes/Header.ejs %>
<%include ../../Layouts/Ordenes/tabs.ejs %>
<%include ./modal.ejs %>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="tab-content" id="ex2-content">
                <!--TAB PARA TABLA DE LISTADO-->
                <div
                class="tab-pane fade show active"
                id="ex3-tabs-1"
                role="tabpanel"
                aria-labelledby="listado"
                >
                    <!--ZAMPAR AQUI TODO EL MIERDERO DE LA TABLA DE MOTORISTAS-->
                    <div class="row border border-light">
                        <div class="col-lg-12">
                            <table class="hover listado" >
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Observacion</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody class="table-hover">
                                    <% if (data) { %>
                                        <% for(var i = 0; i < data.length; i++) { %>
                                          <tr>
                                            <td><%= data[i].IdBombero %></td>
                                            <td><%= data[i].Nombre %></td>
                                            <td><%= data[i].Apellido %></td>
                                            <td><%= data[i].Observacion %></td>
                                            <td>
                                              <a href="/catalogos/bombs/<%= data[i].IdBombero %>" class="btn btn-warning btn-sm">Editar</button>
                                              <a href="/catalogos/bombs/del/<%= data[i].IdBombero %>" class="btn btn-danger btn-sm">Eliminar</a>
                                            </td>
                                          </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>  
                        </div>
                    </div>                                     
                </div>
                <!--TAB PARA FORM DE REGISTRO-->
                <div
                class="tab-pane fade"
                id="ex3-tabs-2"
                role="tabpanel"
                aria-labelledby="regform"
                >
                    <!--ZAMPAR AQUI EL FORM DE REGISTRO-->
                    <div class="row d-flex justify-content-center">
                        <form class="text-center border border-light p-5 col-md-4" action="/catalogos/bombs/new" method="POST">
                            <!-- Grid row -->
                            <div class="form-row">
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="nombre" name="nombre" type="text" class="form-control" autocomplete="off" required>    
                                    <label for="nombre">Nombres</label>                                
                                </div>
                            </div>
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="apellido" name="apellido" type="text" class="form-control" autocomplete="off" required>       
                                    <label for="apellido">Apellidos</label>                             
                                </div>
                            </div>                          
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <textarea id="form7" name="obs" class="md-textarea form-control" rows="3" autocomplete="off"></textarea>
                                <label for="form7">Observacion</label>
                            </div>
                            <div class="col-md-12">
                                <button id="regMot" class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <!-- Grid row -->
                        </form> 
                    </div>                        
                </div>
            </div>
        </div>
    </div>
<%include ../../Layouts/Ordenes/Footer.ejs %>
</html>