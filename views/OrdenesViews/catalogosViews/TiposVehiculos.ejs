<!DOCTYPE html>
<html lang="en">
<%include ../../Layouts/Ordenes/Header.ejs %>
<%include ../../Layouts/Ordenes/tabs.ejs %>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="tab-content" id="ex2-content">
                <!--TAB PARA TABLA DE LISTADO-->
                <div
                class="tab-pane fade show active"
                id="ex3-tabs-1"
                role="tabpanel"
                aria-labelledby="listado"
                >
                    <!--ZAMPAR AQUI TODO EL MIERDERO DE LA LISTA DE TIPOS DE VEHICULOS-->
                    <div class="row border border-light">
                        <div class="col-lg-12">
                            <table class="hover listado" >
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Descripcion de Tipo de Vehiculo</th>
                                        <th>Acciones</th>
                                </thead>
                                <tbody class="table-hover">
                                    <% if (data) { %>
                                        <% for(var i = 0; i < data.length; i++) { %>
                                          <tr>
                                            <td><%= data[i].IdTipo %></td>
                                            <td><%= data[i].Tipo %></td>
                                            <td>
                                              <a href="/catalogos/tv/<%= data[i].IdTipo %>" class="btn btn-warning btn-sm">Editar</button>
                                              <a href="/catalogos/tv/del/<%= data[i].IdTipo %>" class="btn btn-danger btn-sm">Eliminar</a>
                                            </td>
                                          </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>  
                        </div>
                    </div>                                     
                </div>
                <!--TAB PARA FORM DE REGISTRO-->
                <div
                class="tab-pane fade"
                id="ex3-tabs-2"
                role="tabpanel"
                aria-labelledby="regform"
                >
                    <!--ZAMPAR AQUI EL FORM DE REGISTRO-->
                    <div class="row d-flex justify-content-center">
                        <form class="text-center border border-light p-5 col-md-4" action="/catalogos/tv/new" method="POST">
                            <!-- Grid row -->
                            <div class="form-row">
                            <!-- Grid column -->
                            <div class="col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="Tipo" name="tv" type="text" class="form-control" autocomplete="off" required>  
                                    <label for="Tipo">Tipo de vehiculo</label>                                  
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <!-- Grid row -->
                        </form> 
                    </div>                        
                </div>
            </div>
        </div>
    </div>
<%include ../../Layouts/Ordenes/Footer.ejs %>
</html>