<!DOCTYPE html>
<html lang="en">
<% include ../../Layouts/Ordenes/Header.ejs %>
<% include ../../Layouts/Ordenes/tabs.ejs %>
<!--BODY DE LAS TABAS (METER TABLAS Y FORM DE REGISTRO -->
<div class="container-fluid">
    <div class="col-md-12">
        <div class="tab-content" id="ex2-content">
            <!--TAB PARA LISTADO-->
                <div
                class="tab-pane fade show active"
                id="ex3-tabs-1"
                role="tabpanel"
                aria-labelledby="listado"
                >
                    <!--AQUI VA TODO EL VERGASEO DEL LISTADO-->
                    <div class="row border border-light">
                        <div class="col-lg-12">
                            <table class="hover listado" >
                                <thead>
                                    <tr>
                                        <th>RTN</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Observacion</th>                        
                                    </tr>
                                </thead>
                                <tbody>
        
                                </tbody>
                            </table>  
                        </div>
                    </div>  
                </div>

            <!--TAB PARA FORM DE REGISTRO-->
                <div
                class="tab-pane fade"
                id="ex3-tabs-2"
                role="tabpanel"
                aria-labelledby="regform"
                >
                    <!--METER EL FORM DEL REGISTRO AQUI-->
                    <div class="row d-flex justify-content-center">
                        <form class="text-center border border-light p-5 col-md-4" action="#" method="POST">
                            <!-- Grid row -->
                            <div class="form-row">
                            <!-- Grid column -->
                            <div class="col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="rtnTrans" type="text" class="form-control" maxlength="14" autocomplete="off" required>
                                    <label for="rtnTrans">RTN</label>
                                </div>
                            </div>
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="nombre" type="text" class="form-control" autocomplete="off" required>
                                    <label for="nombre">Nombres</label>
                                </div>
                            </div>
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <!-- Material input -->
                                <div class="md-form mt-0">
                                    <input id="apellido" type="text" class="form-control" autocomplete="off" required>
                                    <label for="apellido">Apellidos</label>
                                </div>
                            </div>                          
                            <!-- Grid column -->
                            <div class="md-form col-lg-12">
                                <textarea id="form7" class="md-textarea form-control" rows="3" autocomplete="off"></textarea>
                                <label for="form7">Observacion</label>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <!-- Grid row -->
                        </form> 
                    </div>     
                </div>
        </div>
    </div>
</div> 
<%include ../../Layouts/Ordenes/Footer.ejs %>
</html>